import trax.data
import trax.layers
import trax.models
import trax.optimizers
import trax.supervised.trainer_lib


# Parameters for batcher:
# ==============================================================================
batcher.data_streams = @data.data_streams
batcher.max_eval_length = 2048
batcher.buckets = ([2048], [8])
batcher.id_to_mask = 0

# Parameters for data_streams:
# ==============================================================================
data_streams.data_dir = None
data_streams.dataset_name = 't2t_enwik8_l2k'
data_streams.input_name = 'targets'

# Parameters for multifactor:
# ==============================================================================
# 0.03125 ~= 1024^-0.5 = d_model^-0.5
multifactor.constant = 4.1e-4
multifactor.factors = 'constant * linear_warmup * cosine_decay'
multifactor.warmup_steps = 4000
multifactor.steps_per_cycle = 200000

# Parameters for Adam:
# ==============================================================================
Adam.weight_decay_rate=0.0
Adam.b1 = 0.9
Adam.b2 = 0.98
Adam.eps = 1e-9

# Parameters for train:
# ==============================================================================
train.eval_frequency = 2000
train.eval_steps = 305
train.model = @trax.models.RelformerLM
train.optimizer = @trax.optimizers.Adam
train.steps = 400000
train.save_graphs = False
train.checkpoints_at = [200000, 300000, 400000]


# Parameters for RelformerLM:
# ==============================================================================
RelformerLM.d_ff = 2048
RelformerLM.d_model = 512
RelformerLM.dropout = 0.15
RelformerLM.vanilla_layers = (8,8)
RelformerLM.n_funnel_blocks = (16,)
RelformerLM.shorten_factors = (2,)
RelformerLM.n_heads = 8
RelformerLM.vocab_size = 256
RelformerLM.attention_upsampling_fn = @LinearUpsampling
RelformerLM.ff_activation = @trax.layers.FastGelu
