import trax.data
import trax.models
import trax.optimizers
import trax.supervised.trainer_lib

# Module trax.data:
# ==============================================================================
batcher.data_streams = @data.data_streams
batcher.batch_size_per_device = 128
batcher.eval_batch_size = 128
batcher.max_eval_length = 2048
batcher.id_to_mask = 0

data_streams.data_dir = None
data_streams.dataset_name = 't2t_languagemodel_lm1b32k'
data_streams.input_name = 'targets'
data_streams.preprocess_fn = @data.lm1b_preprocess

lm1b_preprocess.max_target_length = 512
lm1b_preprocess.max_eval_target_length = 2048

# Module trax.models.transformer:
# ==============================================================================
TransformerLM.d_model = 512
TransformerLM.d_ff = 2048
TransformerLM.dropout = 0.1
TransformerLM.max_len = 2048
TransformerLM.mode = 'train'
TransformerLM.n_heads = 8
TransformerLM.n_layers = 6
TransformerLM.vocab_size = 32000

# Module trax.supervised.lr_schedules:
# ==============================================================================
multifactor.constant = 0.1
multifactor.factors = 'constant * linear_warmup * rsqrt_decay'
multifactor.warmup_steps = 8000

# Module trax.supervised.trainer_lib:
# ==============================================================================
train.eval_frequency = 1000
train.eval_steps = 10
train.model = @trax.models.TransformerLM
train.optimizer = @trax.optimizers.Adam
train.steps = 100000
